api:
  debug: false # Enable this to debug Traefik
  dashboard: true # Enable the web dashboard

# HTTPS certificate
certificatesResolvers:
  ovh:
    acme:
      email: "{{ email }}"
      storage: "/acme.json"
      dnsChallenge:
        provider: "ovh"

# HTTP/HTTPS configuration
entryPoints:
  http:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: "https"
          scheme: "https"
  https:
    address: ":443"
    http:
      tls: # Generate wildcard certificate
        certResolver: "ovh"
        domains:
          - main: "{{ private_domain }}"
            sans:
              - "*.{{ private_domain }}"
 
# Allow reverse-proxy on self-signed web app
serversTransport:
  insecureSkipVerify: true

# Read Docker label & file configuration
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock" # Docker socket
    network: "overlay_network" # Docker network
    exposedbydefault: false # Must use traefik.enable to expose service
  file:
    directory: "/config" # Config directory